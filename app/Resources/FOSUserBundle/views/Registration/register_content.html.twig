{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register login_container'}}) }}
<div class="global-form">
  <div class="left-column">
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
  </div>
  <div class="right-column">
    {{ form_row(form.plainPassword) }}
  </div>
  </div>
  <h2>Coordonnées Personnelles</h2>
  <div class="global-form">
    <div class="left-column">
      {{ form_row(form.nom)}}
      {{ form_row(form.prenom) }}
      {{ form_row(form.telephone) }}
    </div>
    <div class="right-column">
      {{ form_row(form.adresseFacturation) }}
      {{ form_row(form.villeFacturation) }}
      {{ form_row(form.codePostalFacturation) }}
    </div>
  </div>
  <input type="checkbox" name="" value="" class="checkboxLivraison"> Adresse de Livraison Différentre
  <div class="adresseLivraison">
    <h3>Adresse de Livraison</h3>
    {{ form_row(form.adresseLivraison) }}
    {{ form_row(form.villeLivraison) }}
    {{ form_row(form.codePostalLivraison) }}
  </div>
<div>
    <input type="submit" class="btn btn-primary btn-registration" value="{{ 'registration.submit'|trans }}" />
    {{ form_end(form) }}
</div>
